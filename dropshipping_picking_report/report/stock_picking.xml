<odoo>

    <template id="report_picking" inherit_id="stock.report_picking">
        <div t-field="o.move_ids_without_package[0].partner_id" position="after">
            <p t-if="o.is_dropshipping() and o.move_ids_without_package[0].sudo().partner_id.vat">
                <t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.move_ids_without_package[0].sudo().partner_id.vat"/>
            </p>
        </div>
        <div name="div_incoming_address" position="attributes">
            <attribute name="t-if">not o.is_dropshipping()</attribute>
        </div>
        <div name="div_incoming_address" position="after">
            <div t-if="o.is_dropshipping() and o.carrier_id.partner_id" name="div_carrier_address" class="col-5 offset-1">
                <span><strong>Transporte:</strong></span>
                <div t-field="o.carrier_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
            </div>
        </div>
        <p t-field="o.note" position="after">
            <p t-if="o.declared_value">Valor declarado: <span t-field="o.declared_value" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/></p>
        </p>
    </template>

</odoo>

